{
  "compilerOptions": {
    "outDir": "./dist", // Output compiled JS files to 'dist'
    "rootDir": "./src", // Source files are in 'src'
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*", "src/base.ts"],
  "exclude": ["node_modules"]
}
